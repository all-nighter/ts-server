{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "esnext"],
    "module": "commonjs",
    "strictNullChecks": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
